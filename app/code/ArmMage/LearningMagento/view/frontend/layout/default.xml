<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="armMage/general/enable"
                   name="blog-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Blog</argument>
                    <argument name="path" xsi:type="string">blog</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
